<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_memo_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/rl_keyboard_edit_bar"
    android:layout_below="@+id/cl_coordinatorLayout"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:showIn="@layout/activity_create_note">


    <LinearLayout
        android:id="@+id/ll_note_dynamic_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.gome.note.view.ColoredLinearyLayout
            android:id="@+id/note_dynamic_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin" />


    </LinearLayout>
</ScrollView>
