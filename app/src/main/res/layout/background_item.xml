<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_background_item"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/bg_item_height_100dp"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_background_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_background_image"
            android:layout_width="@dimen/bg_item_width_64dp"
            android:layout_height="@dimen/bg_item_height_64dp" />

        <TextView
            android:id="@+id/tv_background_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_4"
            android:textSize="@dimen/common_textsize_20px" />

    </LinearLayout>
</LinearLayout>
