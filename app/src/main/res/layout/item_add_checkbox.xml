<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">

    <CheckBox
        android:id="@+id/ck_item_add"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/pb_traslute_process"
        android:visibility="gone" />


    <com.gome.note.view.ZanyEditText
        android:id="@+id/ze_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ck_item_add"
        android:background="@null"
        android:gravity="center_vertical"
        android:imeOptions="actionSend"
        android:textColor="@color/font_black_2"
        android:textSize="15sp"></com.gome.note.view.ZanyEditText>


    <ProgressBar
        android:id="@+id/pb_traslute_process"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="2dp"
        android:visibility="gone" />


</RelativeLayout>
