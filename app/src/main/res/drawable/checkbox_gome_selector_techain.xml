<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/checked"
        android:drawable="@drawable/ic_checkbox_single_checked"
        android:state_checked="true" />

    <item
        android:id="@+id/unchecked"
        android:drawable="@drawable/ic_checkbox_single_unchecked"
        android:state_checked="false" />

    <transition
        android:drawable="@drawable/animated_checkbox_single_uncheck"
        android:fromId="@+id/checked"
        android:toId="@+id/unchecked" />

    <transition
        android:drawable="@drawable/animated_checkbox_single_check"
        android:fromId="@+id/unchecked"
        android:toId="@+id/checked" />
</animated-selector>